<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Botão para abrir o PDF -->
    <Button
        android:id="@+id/open_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir PDF"
        android:layout_marginBottom="20dp"/>

    <!-- ImageView para exibir o PDF -->
    <ImageView
        android:id="@+id/pdf_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp" />

    <!-- Botões para avançar e retroceder páginas -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/prev_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Página Anterior" />

        <Button
            android:id="@+id/next_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima Página" />
    </LinearLayout>
</LinearLayout>